{
    "description": "DIV inspired 2d game engine",
    "license": "MIT",
    "name": "ddiv",
    "authors": [
        "Luis Panadero Guardeño"
    ],
    "copyright": "Copyright © 2020, Luis Panadero Guardeño",
    "dflags": ["-preview=dip1008"],
    "buildTypes": {
        "docs": {
            "buildOptions": [
                "syntaxOnly"
            ],
            "dflags": [
                "-c",
                "-Dddocs"
            ],
            "dflags-dmd": [
                "-preview=markdown"
            ]
        },
        "unittest-opt": {
            "buildOptions": [
                "inline",
                "optimize",
                "unittests"
            ]
        }
    },
    "configurations": [
        {
            "name": "ddiv",
            "targetType": "library"
        },
        {
            "dependencies": {
                "pijamas": "~>1.1",
                "silly": "~>1.2.0-dev.1"
            },
            "importPaths": [
                "source",
                "tests"
            ],
            "name": "unittest",
            "sourcePaths": [
                "source",
                "tests"
            ],
            "targetType": "library"
        }
    ],
    "dependencies": {
        "ddiv:core": "*",
        "ddiv:containers": "*",
        "bindbc-sdl": "~>0.21",
        "ikod-containers": "~>0.0.20",
        "extendedlogger": "~>1"
    },
    "targetPath": "bin",
    "subPackages": [
        "./core/",
        "./containers/"
    ],
    "toolchainRequirements": {
        "dub": ">=1.20.0",
        "frontend": ">=2.91.0"
    }
}
